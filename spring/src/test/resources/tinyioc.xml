<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="helloWorldService" name="helloWorldService"
    class="com.yiming.learn.spring.tiny.HelloWorldService">
    <property name="text" value="yiming2"/>
    <property name="outputService" ref="outputService"/>
  </bean>
  <bean name="outputService" class="com.yiming.learn.spring.tiny.OutputService">
    <property name="text" value="World"/>
  </bean>

</beans>